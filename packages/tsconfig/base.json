{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "moduleResolution": "bundler",

        "strict": true, 
        "noImplicitAny": true, 

        "skipLibCheck": true, 
        "esModuleInterop": true, 
        "resolveJsonModule": true, 
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@eng-suite/api": ["packages/api-std/src"],
            "@eng-suite/api/*": ["packages/api-std/src/*"],
            "@eng-suite/physics": ["packages/physics-engine/src"],
            "@eng-suite/physics/*": ["packages/physics-engine/src/*"]
        }
    }
}
