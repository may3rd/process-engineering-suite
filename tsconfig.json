{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            // This tells VS Code where to find your packages
            "@eng-suite/api": [
                "packages/api/src/index.ts"
            ],
            "@eng-suite/api/*": [
                "packages/api/src/*"
            ],
            "@eng-suite/physics": [
                "packages/physics-engine/src/index.ts"
            ],
            "@eng-suite/physics/*": [
                "packages/physics-engine/src/*"
            ],
            "@eng-suite/ui-kit": [
                "packages/ui-kit/src/index.ts"
            ],
            "@eng-suite/ui-kit/*": [
                "packages/ui-kit/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}