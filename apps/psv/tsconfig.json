{
    "extends": "../../packages/tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@eng-suite/api": [
                "../../packages/api-std/src/index.ts"
            ],
            "@eng-suite/api/*": [
                "../../packages/api-std/src/*"
            ],
            "@eng-suite/physics": [
                "../../packages/physics-engine/src/index.ts"
            ],
            "@eng-suite/physics/*": [
                "../../packages/physics-engine/src/*"
            ],
            "@eng-suite/vessels": [
                "../../packages/vessels-calc/src/index.ts"
            ],
            "@eng-suite/vessels/*": [
                "../../packages/vessels-calc/src/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        "**/*.mts"
    ],
    "exclude": [
        "node_modules"
    ]
}