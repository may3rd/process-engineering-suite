# Local Development Environment Configuration
# Copy this file to .env.local and fill in the values

# Environment Detection
DEPLOYMENT_ENV=local

# Database Configuration (Local PostgreSQL via Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@postgres:5432/engsuite

# API Configuration
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true

# Frontend Configuration
# API URL for browser requests (should be localhost for local dev)
NEXT_PUBLIC_API_URL=http://localhost:8000

# CORS is automatically configured for localhost:3000-3004 in local mode
# No need to set ALLOWED_ORIGINS

# AWS Configuration (not needed for local)
# AWS_REGION=
# AWS_SECRETS_ARN=
